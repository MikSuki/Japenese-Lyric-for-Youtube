{
  "name": "Japanese Lyric for Youtube",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "icon/JPLY_logo.png"
  },
  "icons": {
    "16": "icon/JPLY_logo.png",
    "32": "icon/JPLY_logo.png",
    "48": "icon/JPLY_logo.png",
    "128": "icon/JPLY_logo.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "https://www.google.com/*"
  ],
  "permissions": [
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["*://*.youtube.com/*"],
      "js": [
        "js/lib/jquery-3.7.0.min.js", 
        "js/lib/wanakana.min.js",
        "js/content/LCS.js",
        "js/content/utaten.js",
        "js/content/var.js",
        "js/content/word.js",
        "js/content/lyric.js",
        "js/content/box.js",
        "js/content/main.js",
        "js/content/event.js"
      ],
      "css": ["/css/style.css"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "/js/background/background.js"
  }
}
